<div class="sidebar">
  <h1 class="visually-hidden">Sidebars examples</h1>

  <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
    <p class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
      <svg class="bi me-1" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
      <span class="fs-5">機能一覧</span>
    </p>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <%= link_to products_path, class: "nav-link link-dark", aria: { current: "page" } do %>
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"/></svg>
          商品一覧
        <% end %>
      </li>
      <li>
        <%= link_to new_product_path, class: "nav-link link-dark" do %>
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"/></svg>
          新規作成
        <% end %>
      </li>
        <% if current_user.cart.present? %>
          <%= link_to cart_path(current_user.cart), class: "nav-link link-dark" do %>
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"/></svg>
            カート
          <% end %>
        <% end %>
      <li>
        <%= link_to favorites_path, class: "nav-link link-dark" do %>
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"/></svg>
          お気に入り一覧
        <% end %>
      </li>
      <li>
        <a href="#" class="nav-link link-dark">
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
          その他
        </a>
      </li>
    </ul>
    <hr>
    <div class="dropdown">
      <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
        <img src="default_image.webp" alt="" width="32" height="32" class="rounded-circle me-2">
        <strong>kato</strong>
      </a>
      <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
        <li><a class="dropdown-item" href="#">設定</a></li>
        <li><a class="dropdown-item" href="#">プロフィール</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="#">その他</a></li>
      </ul>
    </div>
  </div>
</div>
